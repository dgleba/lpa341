
<row class="row is-table-row" >

  <div class="col-sm-1 ">
    <%= link_to 'Create', new_lpa_answer_path , class: "btn btn-success"%>
  </div>

  <div class="col-sm-2 ">
    <h4>Listing Lpa Answers</h4>
  </div>

  <div class="col-sm-3">
    <%= search_form_for @q, class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :body_cont, class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn btn-primary">Search <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4 ">
    <%= paginate @lpa_answers %>
  </div>
  
  <div class="col-sm-2 ">
    <%= page_entries_info @lpa_answers, :entry_name => 'item' %>
  </div>
  
</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"></th>
            <th>Body</th>
      <th>User</th>
      <th>Lpa question</th>
      <th>Issue description</th>
      <th>Action taken</th>
    </tr>
  </thead>

  <tbody>
    <% @lpa_answers.each do |lpa_answer| %>
      <tr>
        <td><%= link_to 'Show', lpa_answer, class: "btn btn-info", :style=>'color:#FFFFFF;' %></td>
        <td><%= link_to 'Edit', edit_lpa_answer_path(lpa_answer), class: "btn btn-primary", :style=>'color:#FFFFFF;' %></td>
        <td><%= link_to 'Destroy', lpa_answer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", :style=>'color:#FFFFFF;' %></td>
        <td><%= lpa_answer.body %></td>
        <td><%= lpa_answer.user %></td>
        <td><%= lpa_answer.lpa_question %></td>
        <td><%= lpa_answer.issue_description %></td>
        <td><%= lpa_answer.action_taken %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

