
<%= form_for(@lpa_answer, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @lpa_answer.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@lpa_answer.errors.count, "error") %> prohibited this lpa_answer from being saved:</h4>
      <ul>
      <% @lpa_answer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
            <%= f.label :body, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_area :body, class: "form-control" %>
      </div>
        </div>
  <div class="form-group">
            <%= f.label :user_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.collection_select :user_id, User.all, :id, :name,  { prompt: true }, { :class => 'dgselect2' }  %>
        </div>
    </div>
  <div class="form-group">
            <%= f.label :question_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.collection_select :question_id, Question.all, :id, :name,  { prompt: true }, { :class => 'dgselect2' }  %>
        </div>
    </div>
  <div class="form-group">
            <%= f.label :issue_description, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_area :issue_description, class: "form-control" %>
      </div>
        </div>
  <div class="form-group">
            <%= f.label :action_taken, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_area :action_taken, class: "form-control" %>
      </div>
        </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
