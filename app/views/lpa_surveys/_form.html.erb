
<%= form_for(@lpa_survey, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @lpa_survey.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@lpa_survey.errors.count, "error") %> prohibited this lpa_survey from being saved:</h4>
      <ul>
      <% @lpa_survey.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
            <%= f.label :title, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
        </div>
  <div class="form-group">
            <%= f.label :user_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.collection_select :user_id, User.all, :id, :name,  { prompt: true }, { :class => 'dgselect2' }  %>
        </div>
    </div>
  <div class="form-group">
            <%= f.label :sort, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.number_field :sort, class: "form-control" %>
      </div>
        </div>
  <div class="form-group">
            <%= f.label :active_status, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.number_field :active_status, class: "form-control" %>
      </div>
        </div>

<h3>Questions</h3>
  <div id='lpa_questions'>
    <%= f.fields_for :lpa_questions do |a| %>
      <%= render 'lpa_question_fields', :f => a %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'ADD question', f, :lpa_questions %>
    </div>
  </div>


  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
