<div class='nested-fields well well-compact col-sm-offset-2'>
    <div class="field">
      <%= f.label :title  %>
      <%= f.text_field :title %>
    </div>
    <%= link_to_remove_association " Remove Question", f %>
  </div>
  
  <h3 class='links col-sm-offset-3'>Answers</h3>
  <div id='lpa_answers'>
    <%= f.fields_for :lpa_answers do |ans| %>
      <%= render 'lpa_answer_fields', :f => ans %>
    <% end %>
    <div class='links  col-sm-offset-3'>
      <%= link_to_add_association 'ADD answer', f, :lpa_answers %>
    </div>
  </div>
 