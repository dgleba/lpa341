
<row class="row is-table-row" >

  <div class="col-sm-1 ">
    <%= link_to 'Create', new_lpa_survey_path , class: "btn btn-success"%>
  </div>

  <div class="col-sm-2 ">
    <h4>Listing Lpa Surveys</h4>
  </div>

  <div class="col-sm-3">
    <%= search_form_for @q, class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :title_cont, class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn btn-primary">Search <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4 ">
    <%= paginate @lpa_surveys %>
  </div>
  
  <div class="col-sm-2 ">
    <%= page_entries_info @lpa_surveys, :entry_name => 'item' %>
  </div>
  
</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"></th>
            <th>Title</th>
      <th>User</th>
      <th>Sort</th>
      <th>Active status</th>
    </tr>
  </thead>

  <tbody>
    <% @lpa_surveys.each do |lpa_survey| %>
      <tr>
        <td><%= link_to 'Show', lpa_survey, class: "btn btn-info", :style=>'color:#FFFFFF;' %></td>
        <td><%= link_to 'Edit', edit_lpa_survey_path(lpa_survey), class: "btn btn-primary", :style=>'color:#FFFFFF;' %></td>
        <td><%= link_to 'Destroy', lpa_survey, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", :style=>'color:#FFFFFF;' %></td>
        <td><%= lpa_survey.title %></td>
        <td><%= lpa_survey.user %></td>
        <td><%= lpa_survey.sort %></td>
        <td><%= lpa_survey.active_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

