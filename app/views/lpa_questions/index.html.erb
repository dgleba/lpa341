
<row class="row is-table-row" >

  <div class="col-sm-1 ">
    <%= link_to 'Create', new_lpa_question_path , class: "btn btn-success"%>
  </div>

  <div class="col-sm-2 ">
    <h4>Listing Lpa Questions</h4>
  </div>

  <div class="col-sm-3">
    <%= search_form_for @q, class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :title_cont, class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn btn-primary">Search <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4 ">
    <%= paginate @lpa_questions %>
  </div>
  
  <div class="col-sm-2 ">
    <%= page_entries_info @lpa_questions, :entry_name => 'item' %>
  </div>
  
</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"></th>
            <th>Title</th>
      <th>Survey</th>
      <th>Question type</th>
      <th>Sort</th>
      <th>Active status</th>
    </tr>
  </thead>

  <tbody>
    <% @lpa_questions.each do |lpa_question| %>
      <tr>
        <td><%= link_to 'Show', lpa_question, class: "btn btn-info", :style=>'color:#FFFFFF;' %></td>
        <td><%= link_to 'Edit', edit_lpa_question_path(lpa_question), class: "btn btn-primary", :style=>'color:#FFFFFF;' %></td>
        <td><%= link_to 'Destroy', lpa_question, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", :style=>'color:#FFFFFF;' %></td>
        <td><%= lpa_question.title %></td>
        <td><%= lpa_question.survey %></td>
        <td><%= lpa_question.question_type %></td>
        <td><%= lpa_question.sort %></td>
        <td><%= lpa_question.active_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

